@model IEnumerable<Newone.Models.LatestCourse>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminDashboard/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseDesc)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseDesc)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.LatestCourseId" class="btn btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LatestCourseId" class="btn btn-default">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LatestCourseId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
