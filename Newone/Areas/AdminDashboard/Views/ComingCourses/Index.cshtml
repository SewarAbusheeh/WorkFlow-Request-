@model IEnumerable<Newone.Models.ComingCourse>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminDashboard/Views/Shared/_AdminLayout.cshtml";
}

<h1>ComingCourse</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseDesc)
            </th>
         
         
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseDesc)
                </td>
             

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ComingCourseId" class="btn btn-primary"> Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.ComingCourseId" class="btn btn-success">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.ComingCourseId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
           
        }
    </tbody>
</table>
