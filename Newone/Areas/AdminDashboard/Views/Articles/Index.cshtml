@model IEnumerable<Newone.Models.Article>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminDashboard/Views/Shared/_AdminLayout.cshtml";
}

<h2>Articles</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
        
        

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
              
               

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ArticleId" class="btn btn-primary">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.ArticleId" class="btn btn-success">Details</a> 

                    <a asp-action="Delete" asp-route-id="@item.ArticleId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
