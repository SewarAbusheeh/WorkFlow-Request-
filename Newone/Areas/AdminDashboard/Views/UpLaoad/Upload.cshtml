@model Newone.Models.CourseLesson

@{
    ViewData["Title"] = "Upload";
    Layout = "~/Areas/AdminDashboard/Views/Shared/_AdminLayout.cshtml";
}

<h1>Upload Course Lessons </h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upload"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"  ></div>
            <div class="form-group">
                <label asp-for="CTitle" class="control-label"></label>
                <input asp-for="CTitle" class="form-control" />
                <span asp-validation-for="CTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SerialNumber" class="control-label"></label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contatnt" class="control-label"></label>
                <input asp-for="Contatnt"  type="file" name="File" class="form-control" />
                <span asp-validation-for="Contatnt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilePath" class="control-label"></label>
                <input asp-for="FilePath" class="form-control" />
                <span asp-validation-for="FilePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LatestCourseId" class="control-label"></label>
                <select asp-for="LatestCourseId" class ="form-control" asp-items="ViewBag.LatestCourseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
    
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

